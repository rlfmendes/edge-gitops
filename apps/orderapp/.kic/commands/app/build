#!/bin/bash

#name: build
#short: Build your app

# change to this directory
#cd "$(dirname "${BASH_SOURCE[0]}")" || exit

# build and push the local image

docker build . -t k3d-registry.localhost:5500/orderapp:local
docker push k3d-registry.localhost:5500/orderapp:local

# build local webv
cd webv || exit
docker build . -t k3d-registry.localhost:5500/webv:local
docker push k3d-registry.localhost:5500/webv:local
