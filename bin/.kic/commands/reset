#!/bin/bash

# name: reset
# short: Reset the local cluster (current cluster is deleted)

# change to this directory
cd "$(dirname "${BASH_SOURCE[0]}")" || exit

"$(dirname "${BASH_SOURCE[0]}")/delete"

echo ""
echo "Creating cluster ..."

### todo - check az login

cd ../../../fleet/setup || exit

./akdc-pre-k3d.sh
./k3d-setup.sh
./akdc-pre-flux.sh
./flux-setup.sh
./akdc-pre-arc.sh
./arc-setup.sh
./akdc-post.sh
